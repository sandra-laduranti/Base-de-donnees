CREATE procedure [dbo].[a_insertion_edition]
@FK_titre NVARCHAR (50),
@FK_complement_titre NVARCHAR(50),

@Nom NVARCHAR(50),
@Annee_de_sortie INT,
@Duree_film INT,
@limite_age INT,
@Support NVARCHAR (50),
@Dinsertion DATETIME,
@Tcouleur NVARCHAR (50),
@Tson NVARCHAR (50),

@liste_Langue_audio NVARCHAR (1000),
@liste_Langue_sous_titre NVARCHAR (1000)
/* Exemplaire aussi normalement */

as

begin
   declare @tmp int
   declare @index int
   declare @fin int
   declare @vide int
   declare @er int

/* Catalogue - On vérifie l'existance du film*/

IF EXISTS (select * FROM Films
 where
   Films.Titre=@FK_titre
   and Films.Complement_titre=@FK_complement_titre
	)

begin
print cast(@FK_titre as NVARCHAR)+','+cast(@FK_complement_titre as NVARCHAR)+'existe déja';
return 0;
end

ELSE
print cast(@FK_titre as NVARCHAR)+','+cast(@FK_complement_titre as NVARCHAR)+'à insérer';
EXEC @er = Film_creer @FK_titre, @FK_complement_titre
if @er<>0 return 0
end

/*Edition --> On vérifie l'existence des éléments */

IF EXISTS (select * from Edition
  where
	Edition.Nom=@Nom AND
	Edition.Annee_de_sortie=@Annee_de_sortie AND
	Edition.limite_age=@limite_age AND
	Edition.Support=@Support AND
	Edition.Date_insertion=@Dinsertion AND
	Edition.Type_couleur=@Tcouleur AND
	Edition.Type_son=@Tson
	)
begin
     print  cast(@Nom as NVARCHAR)+','+cast(@Annee_de_sortie as INT)+','+cast(@limite_age as NVARCHAR)+','+cast(@Support as NVARCHAR)+','+cast(@Dinsertion as DATETIME)+','+cast(@Tcouleur as NVARCHAR)+','+cast(@Tson as NVARCHAR)+'existe déjà';
return 0;
end

ELSE
begin
    print cast(@Nom as NVARCHAR)+','+cast(@Annee_de_sortie as INT)+','+cast(@limite_age as NVARCHAR)+','+cast(@Support as NVARCHAR)+','+cast(@Dinsertion as DATETIME)+','+cast(@Tcouleur as NVARCHAR)+','+cast(@Tson as NVARCHAR)+'à insérer';
EXEC @er = Edition_creer @Nom, @Annee_de_sortie, @limite_age, @Support, @Dinsertion, @Tcouleur, @Tson;
if @er<> 0 return 0
end

/* Langue Audio */
   print '--LANGUE_AUDIO--';
  set @index=1
  set @vide=1
  IF CHARINDEX('|', @liste_Langue_audio)=0
     begin
      print 'film muet'
      set @vide = 0
     end

  IF CHARINDEX('|', @liste_Langue_audio)<>1
     begin
       set @liste_Langue_audio = '|' + @liste_Langue_audio
     end
  IF CHARINDEX('|',@liste_Langue_audio, len(@liste_Langue_audio))=0
     begin
       set @liste_Langue_audio = @liste_Langue_audio+'|'
     end

while @index <>LEN(@liste_Langue_audio) AND @vide=1
    begin  
    declare @nom_audio NVARCHAR(50)
   
    
    set @fin = CHARINDEX('|', @liste_Langue_audio, @index+1)

    set @nom_audio = LTRIM(SUBSTRING(@liste_Langue_audio, @index+1, @fin - @index -1))

    set @index = @fin


    IF EXISTS (SELECT * FROM Langue_audio
	WHERE
        Langue_audio.Nom=@nom_audio)
	begin
        print 'la langue audio'+cast(@nom_audio as NVARCHAR)+'existe déjà dans langues audio';
	
	IF EXISTS (SELECT * FROM Rattacher
	WHERE Rattacher.FK_langue=@nom_audio)
		begin
		print 'Cette langue audio'+cast(@nom_audio as NVARCHAR)+'existe déjà dans rattacher';
		end

	ELSE
		begin
		print 'Cette langue audio'+cast(@nom_audio as NVARCHAR)+'existe déjà dans rattacher';
		EXEC Rattacher_creer @nom_audio
	    END
	END
	     
    ELSE
     /* La langue audio n'existe pas on va donc l'ajouté dans la liste de nos langues audio */
     begin
     print cast(@Nom as NVARCHAR)+'n''existe pas dans Langues Audio'
     exec Langue_audio_creer @nom_audio;
     end
END

/*Langue Sous-titre */

print '--Langue_sous_titre--'
  set @index=1
  set @vide=1
  IF CHARINDEX('|', @liste_Langue_sous_titre)=0
     begin 
       print 'Film sans sous titre'
       set @vide=0
     end

  IF CHARINDEX('|', @liste_Langue_sous_titre)<>1
     begin
       set @liste_Langue_sous_titre = '|' + @liste_Langue_sous_titre
     end
  IF CHARINDEX('|',@liste_Langue_sous_titre, len(@liste_Langue_sous_titre))=0
     begin
       set @liste_Langue_sous_titre = @liste_Langue_sous_titre+'|'
     end

while @index <>LEN(@liste_Langue_sous_titre) AND @vide=1
    begin  
    declare @nom_sub NVARCHAR(50)
    
    set @fin = CHARINDEX('|', @liste_Langue_sous_titre, @index+1)

    set @nom_sub = LTRIM(SUBSTRING(@liste_Langue_sous_titre, @index+1, @fin - @index -1))

    set @index = @fin


    IF EXISTS (SELECT * FROM Langue_sous_titre
	WHERE Langue_sous_titre.Nom=@nom_sub)
	    begin
        print 'la langue sous titre'+cast(@nom_sub as NVARCHAR)+'existe déjà dans langues audio'
       
	      IF EXISTS (SELECT * FROM Afficher
	      WHERE Afficher.FK_langue=@nom_sub)
		     begin
		    print 'Cette langue sous-titre'+cast(@nom_sub as NVARCHAR)+'existe déjà dans rattacher';
		     end

	     ELSE
		    begin
		    print 'Cette langue sous titre'+cast(@nom_sub as NVARCHAR)+'existe déjà dans rattacher';
		    EXEC Afficher_creer @nom_sub
		 end
	END
    ELSE
     /* la langue sous titre n'existe pas on va donc l'ajouté dans la liste de nos langues audio */
       BEGIN
       print cast(@nom_sub as NVARCHAR)+'n''existe pas dans Langues Sous-titre'
       exec Langue_sous_titre_creer @nom_sub;
       END
    END


/* Exemplaire ==> a corriger*/

/*declare @counter int
declare @nombreEx int
declare @Date_approvisionnement_e DATETIME
declare @Taux_usure int
declare @Disponibilite int
declare @FK_numero_edition int
set @counter = 1


		EXEC exemplaire_creer @Date_approvisionnement_e @Taux_usure  @Disponibilite @FK_numero_edition;
while @counter <= @nombreEx
	begin

		set @counter = @counter +1;
	end;

GO*/


/*L2 ATIC 2013 GROUPE Ouftim */
/*BdD Ouftim */
/*Charindex - Insertion Exemplaire */
/*Auteur(s): PATRICK POL*/
/*Testeur(s):  PATRICK POL SANDRA LADURANTI ELISE BROCHEN MICKAEL GOUALARD*/
/*Intégrateur: SANDRA LADURANTI*/

