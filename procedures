    INSERT INTO Souscrire
        (
        FK_nom_abonne,
        FK_prenom,
        FK_pseudo,
        FK_num_abonnement
        )       

        VALUES 
        (
        @FK_nom_abonne,
        @FK_prenom,
        @FK_pseudo,
        @FK_num_abonnement
        )


