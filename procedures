CREATE procedure [dbo].[insertion_reservation]

/* Numero Abo */

@Num_abonnement INT,

/* Catalogue */

@Titre NVARCHAR (50),
@Complement_titre NVARCHAR (50),


/* Edition */

@Support NVARCHAR (50),
@Annee_sortie INT,

/* Audio */
@Langue_audio NVARCHAR (50),

/* Sous-titre */
@Langue_sub NVARCHAR (50)

AS

BEGIN

/* Numero Abo */
print '----Votre num abonnement----'



/* Catalogue */

IF EXISTS (select * FROM Films 
 where 
   Films.Titre=@Titre 
   AND Films.Complement_titre=@Complement_titre 
    ) 
 
   begin 
   print cast(@Titre as VARCHAR)+','+cast(@Complement_titre as varchar)+'film existant'; 
   return; 
   end

/* Edition */

IF EXISTS (select * FROM Edition WHERE Edition.Support=@Support AND Edition.Annee_de_sortie=@Annee_sortie)
begin 
     print cast(@Support as VARCHAR)+','+cast(@Annee_sortie as INT)+'Edition Disponible'; 
return; 
end

ELSE
begin 
    print cast(@Support as VARCHAR)+','+cast(@Annee_sortie as INT)+'Edition recherche non existante';
END

/* Audio */

IF EXISTS (SELECT * FROM Langue_audio
    WHERE
        Langue_audio.Nom=@Langue_audio)
    begin
        print 'la langue audio'+cast(@Langue_audio as varchar)+'existe ';
    
        IF EXISTS (SELECT * FROM Rattacher
        WHERE Rattacher.FK_langue=@Langue_audio)
          begin
            print 'Cette langue audio'+cast(@Langue_audio as varchar)+'existe déjà dans rattacher';
          end

        ELSE
           begin
           print 'Cette langue audio'+cast(@Langue_audio as varchar)+'n''existe pas';
        END
   END 
ELSE
    begin
    print cast(@Langue_audio as varchar)+'n''existe pas pour cette edition'
 END

/* Sous-titre */

IF EXISTS (SELECT * FROM Langue_sous_titre
    WHERE Langue_sous_titre.Nom=@Langue_sub)
    begin
        print 'la langue sous titre'+cast(@Langue_sub as varchar)+'existe déjà dans langues audio'
      
	  	 /* la langue sous titre n'existe pas on va donc l'ajouter dans la liste de nos langues audio */ 
        IF EXISTS (SELECT * FROM Afficher
       WHERE Afficher.FK_langue=@Langue_sub)
            begin
            print 'Cette langue sous-titre'+cast(@Langue_sub as varchar)+'existe déjà dans rattacher';
            end

        ELSE
          begin
          print 'Cette langue sous titre'+cast(@Langue_sub as varchar)+'n''existe pas';
         END
	END
    ELSE
     BEGIN
     print cast(@Langue_sub as varchar)+'n''existe pas pour cette edition'
     
     END


	 /*comme nous n'avons pas les curseurs on ne peut pas récuperer la dernière edition il faudra donc appeler
	 la création de reservation ici

	 EXEC reservation_creer @date_creation, @date_butoir, @etat, @FK_num_abonnement, @FK_num_exemplaire;*/
END
GO
