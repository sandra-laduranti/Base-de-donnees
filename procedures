(
    @FK_langue NVARCHAR (50) ,
    @FK_edition INT 
)
AS

BEGIN 

    
IF NOT EXISTS ((SELECT * FROM Rattacher WHERE FK_langue = @FK_langue AND FK_edition = @FK_edition))
 BEGIN
    INSERT INTO Rattacher
            (
            FK_langue,
            FK_edition
            )
    
    VALUES
        (
        @FK_langue,
        @FK_edition
        )
    PRINT 'Nouveau rattachement ajouté'
 END

 ELSE
 BEGIN
    PRINT 'Ce rattachement existe déjà'
 END
END
GO

