(
	@Nom NVARCHAR (50)
)

AS

BEGIN
	
	IF @Nom NOT LIKE '%[A-Za-z ''-]%' OR @Nom LIKE ''
	BEGIN
		PRINT 'Le nom de la langue n''est pas valide';
		RETURN 0;
	END

IF NOT EXISTS (SELECT * FROM Langue_audio WHERE Nom=@Nom)
BEGIN
	INSERT INTO Langue_audio
	(
		Nom	
	)

