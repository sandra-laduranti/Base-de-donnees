IF NOT EXISTS (SELECT * FROM Souscrire WHERE FK_nom_abonne = @FK_nom_abonne AND FK_prenom = @FK_prenom 
AND FK_pseudo = @FK_pseudo AND FK_num_abonnement = @FK_num_abonnement )
