/* Déclencheur type AFTER UPDATE                                  */
/* Déclencheur à chaque mise à jour d'un compte (crédit ou débit) */
/* Cf. " Trigger - Compte - After Update - MC "                   */
/* Auteur(s) : LADURANTI Sandra, BROCHEN Elise					  */ 
/* Correcteur: TSVETKOV Alexandre								  */
/* Testeur(s) : TSVETKOV Alexandre								  */ 
/* Intégrateur(s) : LADURANTI Sandra							  */ 
--------------------------------------------------------------------------- 

IF OBJECT_ID('dbo.declencheur_retrait_exemplaire_use') IS NOT NULL
DROP TRIGGER dbo.declencheur_retrait_exemplaire_use;
GO
CREATE TRIGGER declencheur_retrait_exemplaire_use
ON dbo.Exemplaires
AFTER UPDATE
AS
	DECLARE @Date_approvisionnement DATETIME;
	DECLARE @Taux_usure int;
	DECLARE @Disponibilite bit;
	DECLARE @Reserve int;
	DECLARE @FK_numero_edition int;
	DECLARE @Exemp int;
	
	SET @Exemp = 1;
/* 
Mise à jour est une suppression suivie d'une insertion :
- anciennes lignes d'abord copiées dans table deleted, 
- nouvelles lignes ensuite copiées dans table inserted et dans table du déclencheur.
Pour définir les conditions du déclencheur :
- utiliser les tables inserted et deleted de façon appropriée, 
- ie en fonction de l'action qui a activé le déclencheur.
*/

	SELECT @Taux_usure = Taux_usure, @Disponibilite = Disponibilite
	FROM inserted;
	/* pas dispo = 0, dispo = 1 */
	IF @Taux_usure >= 5 AND @Disponibilite = 1
	BEGIN
		/*IF EXISTS(SELECT * FROM Exemplaires WHERE Disponibilite = 1)
		BEGIN*/
			DELETE FROM Exemplaires WHERE Taux_usure >= 5 AND Disponibilite = 1;
			PRINT 'Exemplaire supprimé a cause d''usure';	
	/*	END
		ELSE
		BEGIN
			PRINT 'Il n''y a qu''un seul exemplaire de ce type';
		END		*/
	END			
GO

--------------------------------------------------------------------
/* Déclencheur type INSTEAD OF DELETE                             */
/* Déclencheur sur tentative de suppression d'un compte           */
/* Cf. " Trigger - Compte - Instead of Delete - MC "              */
/* Auteur(s) : TSVETKOV Alexandre								  */ 
/* Testeur(s) : TSVETKOV Alexandre								  */ 
/* Intégrateur(s) :  LADURANTI Sandra							  */ 
--------------------------------------------------------------------------- 
USE "ouf_tim"

IF EXISTS (SELECT * FROM dbo.sysobjects 
WHERE id = OBJECT_ID('delete_compte_MC'))
BEGIN
DROP TRIGGER delete_compte_MC
END;
GO


CREATE TRIGGER delete_compte_MC
ON Compte
INSTEAD OF DELETE
AS
BEGIN
	DECLARE @id int;
	DECLARE @flag_relance BIT;
	
/* 
Mise à jour est une suppression suivie d'une insertion :
- anciennes lignes d'abord copiées dans table deleted, 
- nouvelles lignes ensuite copiées dans table inserted et dans table du déclencheur.
Pour définir les conditions du déclencheur :
- utiliser les tables inserted et deleted de façon appropriée, 
- ie en fonction de l'action qui a activé le déclencheur.
*/

	SELECT @id = Numero_compte FROM deleted;
	IF @@ERROR <> 0
	BEGIN
		PRINT '(Trigger delete_compte_MC) Erreur, vérifier si le compte existe';
		RETURN;
	END
	
	IF EXISTS (SELECT *
			   FROM Relance_decouvert
			   WHERE FK_Numero_compte = @id)
	BEGIN
		PRINT 'Ne pas supprimer le compte, car relance en cours';
		RETURN;
	END
	
	IF EXISTS (SELECT *
			   FROM Abonnement
			   WHERE FK_numcompte = @id)
	BEGIN
		PRINT 'Ne pas supprimer le compte, car abonnement attaché';
		RETURN;
	END
	
	DELETE FROM Compte
    WHERE Numero_compte = @id	
    	
END

GO
